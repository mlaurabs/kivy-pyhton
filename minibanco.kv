#:import get_color_from_hex kivy.utils.get_color_from_hex

<SplashScreen>:
    MDFloatLayout:
        md_bg_color: get_color_from_hex("#5472D3")
        canvas:
            Color:
                rgb: get_color_from_hex("#002171")
            RoundedRectangle:
                pos: (0, 450)  # (width, height)
                size: (350, 180)
                radius: [0,0,60,60]
        MDLabel:
            text: "Mini Banco"
            pos_hint: {"center_x": .5, "center_y": .9 }
            halign: "center"
            theme_text_color: "Custom"  # necessário para que seja possível customizar a cor do label
            text_color: get_color_from_hex("#F9F9F9")
            font_size:"35sp"

        # adicionar a logo

        MDIconButton: # ainda vou ajeitar
            icon: "chevron-right"
            icon_size: "100sp"
            pos_hint: {"center_x": .5, "center_y": .10}
            theme_icon_color: "Custom"
            icon_color: get_color_from_hex("#002171")
            on_press: root.manager.current = "home" # transferindo para a home

<Home>:
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: get_color_from_hex("#5472D3")


        MDFloatLayout: # principais dados da conta

            md_bg_color: get_color_from_hex("#5472D3")
            height: 110
            size_hint_y: None

            canvas:
                Color:
                    rgb: get_color_from_hex("#000000")
                RoundedRectangle:
                    pos: (236, 525)  # (width, height)
                    size: (65, 65)
                    radius: [330,330,330,330]

            MDLabel:  # saldo
                text: "R$ 20.000,00"
                pos_hint: {"center_x": .5, "center_y": .2}
                halign: "center"
                theme_text_color: "Custom"  # necessário para que seja possível customizar a cor do label
                text_color: get_color_from_hex("#F9F9F9")
                font_name: "Poppins-SemiBold.ttf"
                font_size:"18sp"

            MDLabel:  #  primeiro nome
                text: "Carlos"
                pos_hint: {"center_x": .6, "center_y": .7}
                theme_text_color: "Custom"  # necessário para que seja possível customizar a cor do label
                text_color: get_color_from_hex("#F9F9F9")
                font_size:"18sp"
                font_name: "Poppins-Medium.ttf"

            MDLabel:  #  último nome
                text: "Silva"
                pos_hint: {"center_x": .6, "center_y": .5}
                theme_text_color: "Custom"  # necessário para que seja possível customizar a cor do label
                text_color: get_color_from_hex("#F9F9F9")
                font_size:"18sp"
                font_name: "Poppins-Medium.ttf"

        MDFloatLayout: # home
            md_bg_color: get_color_from_hex("#002171")
            radius: [50, 50, 0, 0]

            # Botao Transferir

            Button:
                size_hint: 0.2, 0.199
                pos_hint: {"center_x": .2, "center_y":.845}
                background_color: 0, 0, 0, 0
                on_press: root.chama()

                Image:
                    source: "images/buttons/transferir.png"
                    size_hint_y: None
                    width: 87
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y


            MDLabel: # Transferir
                text: "Transferir"
                pos_hint: {"center_x": .57, "center_y": .75}
                theme_text_color: "Custom"  # necessário para que seja possível customizar a cor do label
                text_color: get_color_from_hex("#F9F9F9")
                font_size:"14sp"
                font_name: "Poppins-Regular.ttf"


            # Botao Boleto

            Button:
                size_hint: 0.2, 0.199
                pos_hint: {"center_x": .5, "center_y": .887}
                background_color: 0, 0, 0, 0
                on_press: root.chama()

                Image:
                    source: "images/buttons/boleto.png"
                    size_hint_y: None
                    width: 63
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y



            MDLabel: # Boleto
                text: "Boleto"
                pos_hint: {"center_x": .93, "center_y": .75}
                theme_text_color: "Custom"  # necessário para que seja possível customizar a cor do label
                text_color: get_color_from_hex("#F9F9F9")
                font_size:"14sp"
                font_name: "Poppins-Regular.ttf"


            # Botao Recarga

            Button:
                size_hint: 0.2, 0.199
                pos_hint: {"center_x": .8, "center_y": .887}
                background_color: 0, 0, 0, 0
                on_press: root.chama()

                Image:
                    source: "images/buttons/recarga.png"
                    size_hint_y: None
                    width: 63
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y


            MDLabel: # Recarga
                text: "Recarga"
                pos_hint: {"center_x": 1.2, "center_y": .75}
                theme_text_color: "Custom"  # necessário para que seja possível customizar a cor do label
                text_color: get_color_from_hex("#F9F9F9")
                font_size:"14sp"
                font_name: "Poppins-Regular.ttf"

