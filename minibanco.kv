#:import get_color_from_hex kivy.utils.get_color_from_hex

<SplashScreen>:
    MDFloatLayout:
        md_bg_color: get_color_from_hex("#5472D3")
        canvas:
            Color:
                rgb: get_color_from_hex("#002171")
            RoundedRectangle:
                pos: (0, 450)  # (width, height)
                size: (350, 180)
                radius: [0,0,60,60]
        MDLabel:
            text: "Mini Banco"
            pos_hint: {"center_x": .5, "center_y": .9 }
            halign: "center"
            theme_text_color: "Custom"  # necessário para que seja possível customizar a cor do label
            text_color: get_color_from_hex("#F9F9F9") # não tá indoooo
            font_size:"35sp"


        MDIconButton:
            icon: "chevron-right"
            icon_size: "100sp"
            pos_hint: {"center_x": .5, "center_y": .10}
            theme_icon_color: "Custom"
            icon_color: get_color_from_hex("#002171")

